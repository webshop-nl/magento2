<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="webshopnl" translate="label" sortOrder="500" class="webshopnl-plugin">
            <label>Webshop.nl</label>
        </tab>
        <section id="webshopnl_general" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>General</label>
            <tab>webshopnl</tab>
            <resource>WebshopNL_Connect::config</resource>
            <include path="WebshopNL_Connect::system/branding.xml"/>
            <include path="WebshopNL_Connect::system/general.xml"/>
            <include path="WebshopNL_Connect::system/debug.xml"/>
        </section>
        <section id="feed" translate="label comment" type="text" sortOrder="2" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Product Catalogue</label>
            <tab>webshopnl</tab>
            <resource>WebshopNL_Connect::feed</resource>
            <include path="WebshopNL_Connect::system/feed.xml"/>
        </section>
        <section id="order" translate="label comment" type="text" sortOrder="3" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Orders</label>
            <tab>webshopnl</tab>
            <resource>WebshopNL_Connect::order</resource>
            <include path="WebshopNL_Connect::system/order.xml"/>
        </section>
    </system>
</config>
